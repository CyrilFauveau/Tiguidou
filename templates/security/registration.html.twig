{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body_header %}{% endblock %}

{% block body %}
    <div class="block_login registration">

        {{ form_start(form) }}

        {{ form_row(form.username, {'label': 'Pseudo'}) }}
        {{ form_row(form.password, {'label': 'Mot de passe'}) }}
        {{ form_row(form.confirm_password, {'label': 'Confirmation du mot de passe'}) }}

        <button class="btn_connection" type="submit">
            <img src="{{ asset('/build/images/okButton.png') }}" alt="">
        </button>

        {{ form_end(form) }}

    </div>
{% endblock %}