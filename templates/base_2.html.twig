<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://fonts.googleapis.com/css?family=Shadows+Into+Light&display=swap" rel="stylesheet">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}
    </head>
    <body>

        <header class="block_header">
            <figure class="block_logo">
                <img class="image_logo" src="{{ asset('/build/images/logo.png') }}" alt="logo tiguidou quizz">
            </figure>
        </header>

        <main class="block_main">
            <figure class="template_planche">
                <img src="{{ asset('/build/images/planche.png') }}" alt="">
                <div class="inner">
                    {% block body_header %}
                        <div class="header">
                            <figure class="left logo">
                                <a href="/game/shop"><img src="{{ asset('/build/images/boutique_dore.png') }}" alt=""></a>
                            </figure>

                            <div class="center">
                                <div class="block_bonus">
                                    <span class="number">20</span>
                                    <figure class="image"><img src="{{ asset('/build/images/point.png') }}" alt=""></figure>
                                </div>

                                <div class="block_bonus">
                                    <span class="number">03</span>
                                    <figure class="image"><img src="{{ asset('/build/images/erableSirop.png') }}" alt=""></figure>
                                </div>

                                <div class="block_bonus">
                                    <span class="number">12</span>
                                    <figure class="image"><img src="{{ asset('/build/images/indice.png') }}" alt=""></figure>
                                </div>

                                <div class="block_bonus">
                                    <span class="number">01</span>
                                    <figure class="image"><img src="{{ asset('/build/images/boxMystere.png') }}" alt=""></figure>
                                </div>
                            </div>

                            <figure class="right logo">
                                <img src="{{ asset('/build/images/classement_logo.png') }}" alt="classement">
                            </figure>
                        </div>
                    {% endblock %}

                    {% block body %}{% endblock %}
                </div>
            </figure>
        </main>

        <div class="block_footer">
            <figure class="caribou">
                <img src="{{ asset('/build/images/caribou.png') }}" alt="caribou tiguidou">
            </figure>
        </div>

        {% block javascripts %}
            <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
            {{ encore_entry_script_tags('app') }}

        {% endblock %}
    </body>
</html>
